{
  "$schema": "https://json.schemastore.org/prettierrc",
  "trailingComma": "es5",
  "plugins": [
    "@prettier/plugin-oxc",
    "prettier-plugin-astro",
    "prettier-plugin-curly",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "tailwindStylesheet": "./src/styles/global.css",
  "tailwindFunctions": ["clsx", "cn", "twMerge", "cva"]
}
